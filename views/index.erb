<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="/stylesheets/espace.css" rel="stylesheet" />

    <script type="text/javascript" src="/scripts/jquery.js"></script>
    <script type="text/javascript" src="/scripts/jquery.hotkeys.js"></script>
    <script type="text/javascript" src="/scripts/broechem.js"></script>

  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="fourth"></div>
        <div class="three-fourth"></div>
      </div>

      <div class="message message--other row">
        <img class="message__avatar fourth" src="<%= @tweet.high_quality_profile_image %>">
        <p class="message__text three-fourth"><%= @tweet.text %></p>
      </div>

      <div class="message message--inferis row">
        <p class="message__text three-fourth"><%= @reply %></p>
        <img class="message__avatar fourth" src="https://pbs.twimg.com/profile_images/476829051194462208/3xG9k9j-_400x400.jpeg">

      </div>
    </div>
  </body>
</html>
